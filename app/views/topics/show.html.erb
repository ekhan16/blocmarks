<h1><%= @topic.title %></h1>

<%= link_to "Edit", edit_topic_path(@topic), class: 'btn btn-success' %>
<%= link_to "Delete", @topic, method: delete , class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>

<div class="row">
	<div class="col-md-8">
		<ul class="list-unstyled">
			<li><%= render topic.bookmarks %></li>
		</ul>
	</div>
</div>
